{
  "headerComment": "// This file is auto-generated by barrel-craft. Edit only if you are sure.\n\n",
  "targets": ["backend/src", "frontend/src", "src"],
  "forceGenerate": ["backend/src/{domain|application}/ports", "frontend/src/{services|components}"],
  "exclude": [
    "**/__tests__/**",
    "**/@types/**",
    "**/*.d.ts",
    "**/*.spec.*",
    "**/*.test.*",
    "**/components/ui/**",
    "**/migrations/**",
    "**/routes/**",
    "**/seeds/**",
    "routeTree.gen.ts"
  ],
  "extensions": ["ts", "tsx"],
  "subdirectories": true,
  "sortExports": true
}
